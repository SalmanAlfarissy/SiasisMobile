<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/nav_raport"
    android:layout_gravity="center"
    tools:context=".ui.raport.RaportFragment">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="vertical|horizontal">
        <TableLayout
            android:gravity="center"
            android:id="@+id/tbl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp">
            <TableRow>
                <TableLayout>
<!--                    <TableRow>-->

<!--                        <TextView-->
<!--                            android:id="@+id/kelas"-->
<!--                            android:layout_width="157dp"-->
<!--                            android:layout_height="wrap_content"-->
<!--                            android:layout_gravity="center"-->
<!--                            android:layout_margin="10dp"-->
<!--                            android:fontFamily="casual"-->
<!--                            android:text="Kelas : "-->
<!--                            android:textColor="@color/black"-->
<!--                            android:textSize="20dp"-->
<!--                            android:textStyle="bold" />-->

<!--                        <EditText-->
<!--                            android:id="@+id/edtkelas"-->
<!--                            android:layout_width="100dp"-->
<!--                            android:layout_height="wrap_content" />-->
<!--                    </TableRow>-->
                    <TableRow android:layout_width="match_parent">

                        <TextView
                            android:id="@+id/semester"
                            android:layout_width="125dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_margin="10dp"
                            android:fontFamily="casual"
                            android:text="Semester : "
                            android:textColor="@color/black"
                            android:textSize="20dp"
                            android:textStyle="bold" />

                        <Spinner
                            android:id="@+id/spsemester"
                            android:layout_width="133dp"
                            android:fontFamily="casual"
                            android:layout_height="wrap_content"
                            android:entries="@array/Semester"
                            android:padding="15dp" />

                        <ImageButton
                            android:id="@+id/btnsearch"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_marginLeft="20dp"
                            android:background="@drawable/search_sem" />
                    </TableRow>
                </TableLayout>
            </TableRow>
        </TableLayout>

        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_below="@id/tbl"
            android:id="@+id/lnimg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:scrollbars="vertical|horizontal">
                <androidx.cardview.widget.CardView
                    android:layout_width="350dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    app:cardCornerRadius="20dp">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="350dp"
                        android:layout_gravity="center"
                        android:padding="5dp"
                        android:id="@+id/imgraport"
                        android:src="@drawable/siasis" />

                </androidx.cardview.widget.CardView>
            </ScrollView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_below="@+id/lnimg">
            <androidx.cardview.widget.CardView
                android:id="@+id/btnsave"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_gravity="center"
                android:layout_marginBottom="30dp"
                app:cardBackgroundColor="@color/blueb"
                app:cardCornerRadius="10dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:padding="12dp"
                    android:text="Save"
                    android:textAllCaps="true"
                    android:textColor="@color/black" />
            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </RelativeLayout>


</FrameLayout>